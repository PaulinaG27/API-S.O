# Dockerfile para la API de An치lisis de Rendimiento
FROM golang:1.21-alpine AS builder

# Instalar dependencias del sistema necesarias para gopsutil
RUN apk add --no-cache gcc musl-dev

WORKDIR /app

# Copiar archivos de dependencias
COPY go.mod go.sum* ./
RUN go mod download

# Copiar c칩digo fuente
COPY . .

# Compilar la aplicaci칩n
RUN CGO_ENABLED=1 GOOS=linux go build -a -installsuffix cgo -o performance-api .

# Imagen final
FROM alpine:latest

# Instalar dependencias runtime necesarias
RUN apk --no-cache add ca-certificates

WORKDIR /root/

# Copiar el binario compilado
COPY --from=builder /app/performance-api .

# Exponer el puerto
EXPOSE 8080

# Ejecutar la aplicaci칩n
CMD ["./performance-api"]

